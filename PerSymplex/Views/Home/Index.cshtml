@model PerSymplex.Models.HeaderSimplex

@{
    ViewBag.Title = "Home Page";
}


@using (Html.BeginForm())
{
    <div class="row">
        @Html.LabelFor(model => model.NVar)
        @Html.EditorFor(model => model.NVar, new { @class = "form-control" })
    </div>
    <div class="row">
        @Html.LabelFor(model => model.NRest)
        @Html.EditorFor(model => model.NRest, new { @class = "form-control" })
    </div>
    if (Model != null)
    {
        if (Model.NRest > 0 & Model.NRest > 0)
        {
            <div class="row">
                <table>
                    <caption>Função Objetivo</caption>
                    <tr>
                        @for (int i = 0; i < Model.NVar; i++)
                        {
                            <td>
                                @if (i == 0)
                                {
                                    @("Max Z = ") @Html.EditorFor(model => model.FO[i])
                                }
                                else if (i < Model.NVar)
                                {
                                    @(" + ")@Html.EditorFor(model => model.FO[i])
                                }
                                else
                                {
                                    @Html.EditorFor(model => model.FO[i])
                                }
                            </td>
                        }
                    </tr>
                </table>
            </div>
            <div class="row">
                <table cellpadding="0px" cellspacing="0px" style="border:0px">
                    <caption>Matrix A</caption>
                    @for (int i = 0; i < Model.NRest; i++)
                    {
                        <tr>
                            @for (int j = 0; j < (Model.NVar + 1); j++)
                            {
                                <td style="padding:0px;border:0px">
                                    @Html.TextBox("MatrixA" + i, null, new { style = "width:40px", maxlength = "4" })
                                </td>
                                if (j < Model.NVar - 1)
                                {
                                    <td>
                                        @("X" + (j + 1) + " + ")
                                    </td>
                                }
                                else if (j == Model.NVar - 1)
                                {
                                    <td>
                                        @("X" + (j + 1) + " <= ")
                                    </td>
                                }
                            }
                        </tr>
                    }
                </table>

            </div>
        }
    }

